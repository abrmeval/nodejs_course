{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            //Define the entry point of your application here
            "program": "${workspaceFolder}/app.js",
            // Use nodemon to automatically restart the server on file changes
            "restart": true,
            // Specify nodemon as the runtime executable
            "runtimeExecutable": "nodemon",
            // It says to use the integrated terminal for input and output
            "console": "integratedTerminal"
        }
    ]
}